
@{
    ViewData["Title"] = "Index";
}
@{
    var asyncSettings = new Syncfusion.EJ2.Inputs.UploaderAsyncSettings { SaveUrl = "/Home/Save" };
}
<ejs-grid id="Grid" allowPaging="true">
    <e-grid-pageSettings pageCount="2" pageSize="5"> </e-grid-pageSettings>
</ejs-grid>
<ejs-uploader id="uploader" autoUpload="false" asyncSettings="@asyncSettings" success="success"></ejs-uploader>
<script>
    var grid;
    
    function success(args) {
        grid = document.getElementsByClassName('e-grid')[0].ej2_instances[0];
        grid.dataSource = JSON.parse(args.e.target.responseText);
    }

</script>